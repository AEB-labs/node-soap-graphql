{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,
        "lib": [
            "ES2020",
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
